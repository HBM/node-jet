{
  "compilerOptions": {
    "target": "esnext",
    "module": "ESNext",
    "allowJs": true,
    "checkJs": true,
    "jsx": "react",
    "declaration": true,
    "outDir": "lib",
    "noEmit": false,
    "strict": true,
    "noImplicitAny": true,

    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true
  },
  "include": ["src/**/*"]
}
